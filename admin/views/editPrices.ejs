    <script>
        function convertArabicNumbersToEnglish(input) {
            return input.replace(/[٠-٩]/g, function (d) {
                return d.charCodeAt(0) - 1632;
            }).replace(/[۰-۹]/g, function (d) {
                return d.charCodeAt(0) - 1776;
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('.arabic-to-english');

            // تحويل الأرقام العربية إلى إنجليزية عند تحميل الصفحة
            inputs.forEach(input => {
                input.value = convertArabicNumbersToEnglish(input.value);
            });

            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    // تحويل الأرقام العربية إلى الإنجليزية أثناء الكتابة
                    this.value = convertArabicNumbersToEnglish(this.value);
                });

                input.addEventListener('keypress', function (e) {
                    // السماح فقط بإدخال الأرقام
                    if (e.which < 48 || e.which > 57) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
