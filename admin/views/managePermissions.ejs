    <script>
        function toggleDefault(role, permissionName, isDefault) {
            const url = '/admin/updatePermissionDefault';
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ role, permission: permissionName, isDefault })
            })
            .then(response => response.json())
