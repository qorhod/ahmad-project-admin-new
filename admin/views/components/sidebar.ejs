<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/update-profile" method="post" enctype="multipart/form-data" class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Change Profile Image</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="px-4 modal-body d-flex justify-content-between align-items-center">
        <label class="btn btn-secondary" for="inputFile">+ Upload Img</label>
        <input name="avatar" style="display: none;" id="inputFile" type="file">
        <img id="profileImage" style="border-radius: 50%;" src="<%= user && user.profileImage ? user.profileImage : '/admin/public/img/user.png' %>" alt="user image" width="150" height="150">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </form>
  </div>
</div>
<!--// Modal// -->
<div class="b-example-divider b-example-vr"></div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.getElementById('sidebarId');
    const content = document.getElementById('content');
    const sidebarDivider = document.getElementById('sidebar-divider');
    const navbar = document.querySelector('.navbar');

    function toggleSidebar() {
        sidebar.classList.toggle('small-sidebar');
        content.classList.toggle('small-content');
        sidebarDivider.classList.toggle('small-sidebar-divider');
        navbar.classList.toggle('small-navbar');
        
        // Adjust the position of the sidebar-divider based on the sidebar width
        if (sidebar.classList.contains('small-sidebar')) {
            sidebarDivider.style.right = '90px'; // Update this value based on your small-sidebar width
        } else {
            sidebarDivider.style.right = '250px'; // Update this value based on your normal sidebar width
        }
    }

    const toggleButton = document.querySelector('.bi-x-circle');
    toggleButton.addEventListener('click', toggleSidebar);
  });
</script>
