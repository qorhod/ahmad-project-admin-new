      <!-- المزيد من العناصر -->
    </ul>
    <hr />
    <div class="dropdown sticky-top">
      <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="<%= user.profileImage ? user.profileImage : '../img/pin.png' %>" alt="" width="32" height="32" class="rounded-circle me-2" />
        <strong class="sidebar-text"><%= user.userName %></strong>
      </a>
      <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
        <li><a class="dropdown-item" href="#">New project...</a></li>
        <li><a class="dropdown-item" href="#">Settings</a></li>
        <li>
          <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="dropdown-item" href="#">Profile Image</button>
        </li>
        <li><hr class="dropdown-divider" /></li>
        <li><a class="dropdown-item" href="/signout">Sign out</a></li>
      </ul>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form action="/update-profile" method="post" enctype="multipart/form-data" class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Change Profile Image</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="px-4 modal-body d-flex justify-content-between align-items-center">
          <label class="btn btn-secondary" for="inputFile">+ Upload Img</label>
          <input name="avatar" style="display: none;" id="inputFile" type="file">
          <img id="profileImage" style="border-radius: 50%;" src="<%= user.profileImage ? user.profileImage : '../img/pin.png' %>" alt="" width="150" height="150">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
  <!--// Modal// -->

  <div class="b-example-divider b-example-vr"></div>

  <script>
    inputFile.addEventListener("change", (eo) => {
      profileImage.src = URL.createObjectURL(eo.target.files[0])
    })
  </script>
</body>
</html>
